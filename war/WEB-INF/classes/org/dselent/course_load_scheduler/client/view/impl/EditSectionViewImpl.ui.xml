<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	</ui:style>
	<g:HTMLPanel width="100%" height="100%">
		<g:VerticalPanel width="100%" height="100%"
			horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_TOP"
			ui:field="editSectionPanel" styleName="modalPanel">
			<!-- TITLE -->
			<g:Cell height="sectionTitle">
				<g:Label text="Edit Section" styleName="viewCoursesHeader"
					ui:field="editSectionTitle" />
			</g:Cell>
			<!-- SECTION INFORMATION -->
			<g:Grid>
				<g:row>
					<g:customCell>
						<g:Label text="Term:" ui:field="termLabel" />
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="termComboBox" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Generated Name:" ui:field="generatedNameLabel" />
					</g:customCell>
					<g:customCell>
						<g:TextBox text="Section-Name-Here" ui:field="generatedNameTextBox" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Generated CRN#:" ui:field="generatedCRNLabel" />
					</g:customCell>
					<g:customCell>
						<g:TextBox text="CRN#-Here" ui:field="generatedCRNTextBox" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Section Type:" ui:field="sectionTypeLabel" />
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="sectionTypeComboBox" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Start Time:" ui:field="sectionStartTimeLabel" />
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="sectionStartTimeComboBox" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="End Time:" ui:field="sectionEndTimeLabel" />
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="sectionEndTimeComboBox" />
					</g:customCell>
				</g:row>
			</g:Grid>
			<!-- DAYS CHECKBOXES -->
			<g:HorizontalPanel>
				<g:CheckBox text="M" ui:field="mondayCheckBox" checked="true" />
				<g:CheckBox text="T" ui:field="tuesdayCheckBox" />
				<g:CheckBox text="W" ui:field="wednesdayCheckBox"
					checked="true" />
				<g:CheckBox text="R" ui:field="thursdayCheckBox" />
				<g:CheckBox text="F" ui:field="fridayCheckBox" checked="true" />
			</g:HorizontalPanel>
			<!-- SUBMIT/CANCEL BUTTONS -->
			<g:HorizontalSplitPanel height="30px">
				<g:Button text="Cancel" ui:field="cancelButton" />
				<g:Button text="Submit" ui:field="submitButton" />
			</g:HorizontalSplitPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 