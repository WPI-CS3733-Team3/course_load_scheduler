<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	</ui:style>
	<g:HTMLPanel width="100%" height="100%" styleName="backgroundDefault">
		<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_TOP" ui:field="addSectionPanel">
			<g:Cell height="sectionTitle">
				<g:Label text="Add Section" styleName="viewCoursesHeader" ui:field="addSectionTitle"/>
			</g:Cell>
			<g:Grid>
				<g:row>
					<g:customCell>
						<g:Label text="Term:" ui:field="termLabel"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="termComboBox"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Generated Name:" ui:field="generatedNameLabel"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox text="Section-Name-Here" ui:field="generatedNameTextBox"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Generated CRN#:" ui:field="generatedCRNLabel"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox text="CRN#-Here" ui:field="generatedCRNTextBox"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Section Type:" ui:field="sectionTypeLabel"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="sectionTypeComboBox"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Section Length:" ui:field="sectionLengthLabel"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="sectionLengthComboBox"/>
					</g:customCell>
				</g:row>

			</g:Grid>
			<g:HorizontalSplitPanel>
			<g:Button text="Cancel" ui:field="cancelButton"/>
			<g:Button text="Create" ui:field="createButton"/>
			</g:HorizontalSplitPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 