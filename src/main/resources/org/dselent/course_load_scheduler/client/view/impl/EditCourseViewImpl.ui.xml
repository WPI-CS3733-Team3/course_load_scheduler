<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel ui:field="baseContainer">
	
	<g:VerticalPanel horizontalAlignment="ALIGN_CENTER">
			<g:Cell horizontalAlignment="ALIGN_CENTER">
				<g:Label text="Edit Course" horizontalAlignment="ALIGN_CENTER" width="292px" styleName="h1"/>
			</g:Cell>
			<g:Cell horizontalAlignment="ALIGN_CENTER">
				<g:Grid>
				<g:row>
					<g:customCell>
						<g:Label text="Course Name:"></g:Label>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="courseNameField"></g:TextBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Course Number:"></g:Label>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="courseNumberField"></g:TextBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Required Frequency:"></g:Label>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="frequencyDropdown"/>
					</g:customCell>
					
				</g:row>
				<g:row>
					<g:customCell>
						<g:StackPanel ui:field="sectionList"/>
					</g:customCell>
					<g:customCell>
						<g:VerticalPanel>
							<g:Button ui:field="addSection">Add Section</g:Button>
							<g:Button text="Edit Section" ui:field="editSection"/>
							<g:Button ui:field="removeSection">Remove Section</g:Button>
						</g:VerticalPanel>
					</g:customCell>
				</g:row>
			</g:Grid>
			</g:Cell>
			<g:HorizontalPanel>
				<g:Button text="Cancel" ui:field="cancelButton"/>
				<g:Button text="Submit Changes" ui:field="submitButton"/>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	
	</g:HTMLPanel>
</ui:UiBinder> 