				<g:row>
					<g:customCell>
						<g:Label text="Course Title" styleName="courseTitle" ui:field="courseTitle"></g:Label>
					</g:customCell>
					<g:customCell>
						<g:Button text = "Edit/View" ui:field="EditViewCourse"></g:Button>
					</g:customCell>
					<g:customCell>
						<g:Button text = "Remove" ui:field="Remove"></g:Button>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Course Title" styleName="courseTitle"></g:Label>
					</g:customCell>
					<g:customCell>
						<g:Button text = "Edit/View"></g:Button>
					</g:customCell>
					<g:customCell>
						<g:Button text = "Remove"></g:Button>
					</g:customCell>
				</g:row>
				
			</g:Grid>
			</g:Cell>
			<g:Cell horizontalAlignment="ALIGN_RIGHT">
				<g:Button text="Add new Course..." ui:field="addCourse"></g:Button>
			</g:Cell>
			<g:Cell horizontalAlignment="ALIGN_CENTER">
				<g:StackPanel>
			<g:VerticalPanel width="100%" height="100%" g:StackPanel-text="New widget">
				<g:Button text="Edit and remove buttons" width="226px"/>
