			</g:HorizontalPanel>
			</g:Cell>
			<g:Cell horizontalAlignment="ALIGN_CENTER">
				<g:Label text="View Courses" ui:field="pageTitle" height="77px" styleName="viewCoursesHeader"></g:Label>
			</g:Cell>
			<g:Cell horizontalAlignment="ALIGN_CENTER">
				<g:Grid width="322px" height="68px" ui:field="courseGrid" styleName="courseGrid">
